<% content_for :title do %>
  <%= @drill.title %>
<% end %>

<div class="page-header">
  <h1><%= @drill.title %></h1>
  <em><%= @drill.description %></em>
  <div class="btn-group">
    <button class="btn btn-link">
      <%= link_to "Edit", edit_drill_path(@drill) %>
    </button>
    <button class="btn btn-link">
      <%= link_to "Add Flash Card", new_drill_flash_card_path(@drill) %>
    </button>
  </div>
</div>

<div class="row">
  <div class="span12">
    <%= render_actions @drill %>
  </div>
</div>

<div class="row">
  <div class="span6">
    <%= render_characters @drill.flash_cards %>
  </div>
</div>

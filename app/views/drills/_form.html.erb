<%= form_for @drill,
  :url => { :action => action },
  :html => {
    :class => "form-horizontal",
    :role => "form"
  },
  :method => method do |form| %>

  <fieldset>
    <legend>Drill</legend>
    <%= render_field form, @errors, :title, :text_field, {
      :placeholder => "ex. school life",
      :class => "form-control"
    } %>

    <%= render_field form, @errors, :description, :text_field, {
      :rows => 5,
      :placeholder => "ex. classes, research, dating",
      :class => "form-control"
    } %>
  </fieldset>

  <%= render :partial => "flash_cards/form" %>

  <%= form.submit :class => "btn btn-primary" %>
<% end %>

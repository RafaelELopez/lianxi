<% song.lyric.lines.each do |line| %>
  <div class="row lyric" data-timing="<%= line.timing %>">
    <div class="span1">
      <%= line.formatted_timing %>
    </div>

    <div class="span5">
      <%= inject_tooltip_hints line.traditional, song.flash_cards %>
      <br>
      <%= line.translation %>
    </div>
  </div>
<% end %>

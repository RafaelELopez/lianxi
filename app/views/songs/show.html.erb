<% content_for :title do %>
  <%= @song.title %>
<% end %>

<div class="row">
  <div class="span12">
    <h1><%= @song.title %></h1>
    <em>by <%=@song.artist%></em>
  </div>
</div>

<div class="row">
  <div class="span6">
    <iframe
      width="100%"
      height="256"
      src="<%= @song.url %>"
      frameborder="0"
      allowfullscreen></iframe>
  </div>

  <div class="span6">
    <%= render_characters @song.flash_cards %>
  </div>
</div>

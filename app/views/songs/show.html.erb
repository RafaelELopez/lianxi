<% content_for :title do %>
  <%= @song.title %>
<% end %>

<% content_for :head do %>
  <script src="https://www.youtube.com/iframe_api"></script>
<% end %>

<div class="page-header">
  <h1>
    <%= @song[:title] %>
    <small>by <%= @song[:artist] %></small>
  </h1>
</div>

<div class="row" ng-controller="KaraokeController">
  <div class="col-md-4">
      <iframe
        id="youtube-player"
        width="100%"
        height="240"
        frameborder="0"
        src="https://www.youtube.com/embed/<%= @song[:youtubeId] %>?enablejsapi=1"></iframe>
  </div>

  <div class="col-md-4">
    <span ng-show="show.song.simplified()"><%= @song[:simplified].gsub(/\n/, '<br>').html_safe %></span>
    <span ng-show="show.song.traditional()"><%= @song[:traditional].gsub(/\n/, '<br>').html_safe  %></span>
  </div>

  <div class="col-md-4">
    <% @song[:timing].each do |t| %>
      <p><%= t %></p>
    <% end %>
  </div>
</div>

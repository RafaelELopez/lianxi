<%= form_tag login_path,
  :class => "navbar-form pull-right",
  :method => "POST" do %>

  <%= email_field_tag :email, nil,
      :class => "input-small",
      :placeholder => "email" %>
  <%= password_field_tag :password, nil,
      :class => "input-small",
      :placeholder => "password" %>

  <%= submit_tag "Sign in", :class => "btn btn-primary" %>
  <%= submit_tag "Sign up", :class => "btn" %>
<% end %>

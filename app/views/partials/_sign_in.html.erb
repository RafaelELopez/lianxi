<%= form_tag login_path,
  :class => "navbar-form navbar-right",
  :role => "form",
  :method => "POST" do %>

  <div class="form-group">
    <%= email_field_tag :email, nil,
        :class => "form-control",
        :placeholder => "email" %>
  </div>

  <div class="form-group">
    <%= password_field_tag :password, nil,
        :class => "form-control",
        :placeholder => "password" %>
  </div>

  <%= submit_tag "Sign in", :class => "btn btn-primary" %>
  <%= submit_tag "Sign up", :class => "btn btn-default" %>
<% end %>

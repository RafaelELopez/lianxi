gem 'jbuilder'

# Use unicorn as the app server
gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
gem 'debugger'

group :test do
  gem 'turn'
  gem 'minitest'
end

group :development do
  gem 'foreman'
end
